<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1.0"
              android:descendantFocusability="blocksDescendants">

    <ImageButton
        android:id="@+id/podcastArtImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:contentDescription="@string/searchResultImage"
        android:background="@drawable/on_click_selector"
        android:scaleType="fitXY"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <TextView
        android:id="@+id/podcastName"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:textColor="#4c4a4a"
        android:background="@drawable/on_click_selector"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_weight="0.9"/>

    <TextView
        android:id="@+id/numberOfNewEpisodesTextView"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:textColor="#4c4a4a"
        android:background="@drawable/on_click_selector"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_weight="0.1" />
</LinearLayout>