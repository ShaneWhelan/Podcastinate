<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:layout_weight="6">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1">

        <TextView
            android:id="@+id/tempText"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="#4c4a4a" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center"
        android:id="@+id/controlPanel">

        <Button
            android:id="@+id/startPlayer"
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textColor="#4c4a4a" />

        <ImageButton
            android:id="@+id/mainPlayButton"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:background="@drawable/play_icon_selector"
            android:contentDescription="@string/mainPlayButton"/>

        <ImageButton
            android:id="@+id/mainPauseButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/pause_icon_selector"
            android:visibility="gone"
            android:contentDescription="@string/ic_pause" />
    </LinearLayout>
</LinearLayout>
